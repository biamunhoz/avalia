<p id="notice"><%= notice %></p>

<h1>Professores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Habilitado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.codigo %></td>
        <td><%= professor.habilitado ? "Sim": "Não" %></td>
        <td><%= link_to 'Mostrar', professor %></td>
        <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
        <td><%= link_to 'Apagar', professor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

